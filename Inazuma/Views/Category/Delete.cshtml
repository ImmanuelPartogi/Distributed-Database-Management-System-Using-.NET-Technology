@model ModelClasses.Category

<div class="PaddingAll">
    <div class="row">
        <div class="col-lg-9 col-md-6 col-sm-12">
            <h1 class="text-danger">Delete an Item</h1>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <a asp-action="Index" class="btn btn-primary form-control">Go Back to List</a>
        </div>
    </div>
    <hr />
    <div class="PaddingAllWhite">
        <form asp-action="Delete" method="post">
            <div class="row">
                <div class="col-lg-9 col-md-6 col-sm-12">
                    <div class="row">
                        <div class="col-6 text-center text-warning">
                            <h4>Category:</h4>
                        </div>
                        <div class="col-6 text-center text-warning">
                            <h4 class="text-info">@Model.Name</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 form-group">
                    <button type="submit" asp-route-id="@Model.Id" class="btn btn-danger form-control" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                </div>
            </div>
            @Html.AntiForgeryToken() <!-- Add antiforgery token for security -->
        </form>
    </div>
</div>
